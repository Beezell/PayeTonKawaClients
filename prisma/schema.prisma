generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Addresses {
  id          Int      @id @default(autoincrement())
  created_at  DateTime @default(now()) @db.Timestamptz(6)
  code_postal Int
  adresse     String   @db.VarChar()
  client_id   Int
  
  // Relation avec la table Clients
  client      Clients  @relation(fields: [client_id], references: [id])
  
  @@map("addresses")
}

model Entreprises {
  id             Int      @id @default(autoincrement())
  created_at     DateTime @default(now()) @db.Timestamptz(6)
  nom_entreprise String   @db.VarChar()
  id_client      Int
  
  // Relation avec la table Clients
  client         Clients  @relation(fields: [id_client], references: [id])
  
  @@map("entreprises")
}

model Clients {
  id         Int      @id @default(autoincrement())
  created_at DateTime @default(now()) @db.Timestamptz(6)
  nom        String   @db.VarChar()
  prenom     String   @db.VarChar()
  pseudo     String   @db.VarChar()
  mail       String   @db.VarChar()
  
  // Relations
  addresses   Addresses[]
  entreprises Entreprises[]
  
  @@map("clients")
}